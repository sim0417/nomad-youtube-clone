extends ../base.pug

block contents
  div
    video(width=300 height=300)#record-view
    button#record-start-btn Start Recording

  if(errorMessage)
    span=errorMessage

  form(method="POST" enctype="multipart/form-data")
    label(for="video") Video file
    input(type="file", required, id="video" name="video")
    label(for="video-title") Title
    input(type="text", required, placeholder="Title" id="video-title" name="title" maxlength="80")
    label(for="video-desc") Description
    input(type="text", required, placeholder="Description" id="video-desc" name="description" maxlength="300")
    label(for="video-hashtags") Hashtags
    input(type="text", required, placeholder="Hashtags, seperated by comma" id="video-hashtags" name="hashtags")
    input(type="submit", value="Upload")


block scripts 
  script(src="/assets/js/recorder.js") 