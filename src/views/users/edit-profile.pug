extends ../base.pug

block contents
  form(method="POST" enctype="multipart/form-data").edit-profile__form
    label(for="avatar") Avatar
    input(type="file" id="avatar" name="avatar" accept="image/*")
    input(type="text", required, placeholder="name" name="name" value=user.name)
    input(type="text", placeholder="location" name="location" value=user.location)
    input(type="submit", value="Edit profile")

    if user.type = 'email'
      div.edit-profile__password
        a(href="change-password") Change Password &rarr;