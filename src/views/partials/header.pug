header
  a(href="/").header__logo
    i.fab.fa-youtube
  nav
    ul
      li
        a(href="/search")
          i.fas.fa-search
      if isLogin
        li
          a(href="/videos/upload") Upload Video
        li
          a(href="/users/edit-profile") Edit Profile
        li
          a(href="/users/logout") Log Out
        li
          a(href=`/users/${user._id}`)
            if user.socialOnly
              img(src=user.avatarUrl).header__avatar
            else 
              img(src="/" + user.avatarUrl).header__avatar

      else
        li
          a(href="/login") Login
        li
          a(href="/signup").header__btn Join